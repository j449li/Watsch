{
  "manifest_version": 2,

  "name": "Watsch",
  "description": "Does nothing",
  "version": "0.0",
  "icons": { "128": "images/icon.png"},

  "permissions": [
    "tabs",
    "activeTab"
  ],

  "page_action": {
    "default_title": "Export your schedule",
    "default_icon": "images/icon.png"
  },

  "content_scripts": [
    {
      "matches": ["https://quest.pecs.uwaterloo.ca/*"],
      "js": ["export.js"],
      "all_frames": true
    }
  ],

  "background": [
    {
      "scripts": ["bg.js"],
      "persistent": false
    }
  ]
}